@charset "UTF-8";
body,
ul {
  margin: 0;
  padding: 0;
}
body {
  color: #222222;
  font-size: 14px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
}
div {
  display: block;
}
.bbs-container {
  width: 970px;
  margin: 0px auto;
}
.bbs-btn {
  padding: 8px 15px;
  display: inline-block;
  font-weight: normal;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
}
.float-left {
  float: left;
}
.float-right {
  float: right;
}
.text-left {
  text-align: left;
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
.bbs-pagination {
  display: block;
}
.bbs-pagination > div,
.bbs-pagination > span {
  display: inline-block;
}
.bbs-pagination > div a,
.bbs-pagination > span a {
  display: block;
  color: #333333;
  font-size: 14px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
  text-decoration: none;
  height: 28px;
  line-height: 28px;
  width: 28px;
  text-align: center;
  vertical-align: middle;
  border: 1px solid #428bca;
  cursor: pointer;
}
.bbs-pagination > div a:hover,
.bbs-pagination > span a:hover,
.bbs-pagination > div a:active,
.bbs-pagination > span a:active {
  color: #ffffff;
  background-color: #428bca;
}
.bbs-pagination .page-active {
  color: #ffffff;
  background-color: #428bca;
}
.m-heading {
  width: 100%;
  height: 120px;
}
.m-heading img {
  width: 160px;
  height: 120px;
}
.m-caption {
  width: 100%;
  height: 160px;
}
.post-head {
  width: 100%;
}
.posted-btn {
  padding: 8px 18px;
  margin: 6px 2px;
  background-color: #428bca;
  border-color: #428bca;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  color: #ffffff;
  font-size: 14px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
}
.posted-btn:hover,
.posted-btn:active,
.posted-btn:focus {
  background-color: #0d8fff;
}
.post-body .pbody-head {
  display: block;
  margin-top: 8px;
  margin-bottom: 5px;
}
.post-body .pbody-head div {
  float: left;
  margin-bottom: 5px;
}
.post-body .pbody-head div a {
  text-decoration: none;
  color: #333333;
  padding: 5px 15px;
  margin: 0 2px;
  border: 1px solid #428bca;
  cursor: pointer;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
}
.post-body .pbody-head div a:hover,
.post-body .pbody-head div a:active {
  color: #ffffff;
  border: 1px solid #428bca;
  background-color: #428bca;
}
.post-body .pbody-title {
  display: block;
}
.post-body .pbody-title div {
  display: inline-block;
}
.post-body .pbody-title div a {
  display: block;
  text-decoration: none;
  text-align: center;
  padding: 6px 12px;
  color: #333333;
  font-size: 14px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
  font-weight: 800;
  cursor: pointer;
}
.post-body .pbody-title div a:hover,
.post-body .pbody-title div a:active {
  color: #ffffff;
  background-color: #428bca;
}
.post-body .post-container {
  padding: 2px;
  margin: 4px 0;
  border: 1px solid #428bca;
}
.post-body .post-container .post-con-thead {
  border-bottom: 1px solid #428bca;
}
.post-body .post-container .post-item .post-hover {
  margin: 0 auto;
  width: 950px;
  display: block;
  border-bottom: 1px solid #428bca;
}
.post-body .post-container .post-item .post-hover:hover {
  background-color: rgba(13, 143, 255, 0.1);
}
.post-body .post-container .post-item .post-hover .post-thead {
  padding-top: 10px;
}
.post-body .post-container .post-item .post-hover .post-main {
  padding: 4px 6px;
  line-height: 32px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.post-body .post-container .post-item .post-hover .post-main a {
  text-decoration: none;
  cursor: pointer;
}
.post-body .post-container .post-item .post-hover .post-main .post-title {
  margin-left: 4px;
  margin-right: 4px;
  color: #333333;
  font-size: 15px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
}
.post-body .post-container .post-item .post-hover .post-main .post-label {
  color: #428bca;
  font-size: 14px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
}
.post-body .post-container .post-item .post-hover .post-lower {
  color: #333333;
  font-size: 11px;
  font-family: "Microsoft Yahei", "宋体", "黑体", SimSun, Verdana, sans-serif;
  font-weight: normal;
}
.post-body .post-container .post-item .post-context {
  border-left: 1px solid #428bca;
  border-right: 1px solid #428bca;
  position: relative;
  display: none;
  padding: 15px;
  min-height: 120px;
  margin: 0 auto;
  width: 920px;
  border-bottom: 1px solid #428bca;
}
.post-body .post-container .post-item .post-context .context-line {
  height: 0;
  width: 930px;
  margin: 0 auto;
  border-top: 1px solid #428bca;
}
.post-body .post-container .post-pagination {
  padding: 8px;
  text-align: right;
}
.fast-post {
  width: 966px;
  height: 280px;
  display: block;
  padding: 2px;
  margin-bottom: 220px;
}
.fast-post .fast-input-row {
  margin: 2px 0 6px 0;
}
.fast-post .fast-input-row .fast-sel {
  height: 28px;
  border: 1px solid #428bca;
  width: 80px;
}
.fast-post .fast-input-row .fast-input-title {
  width: 420px;
  height: 24px;
  border: 1px solid #428bca;
}
.pbody-head:before,
.pbody-head:after,
.post-row:before,
.post-row:after,
.btn-group:before,
.btn-group:after {
  display: table;
  content: " ";
}
.pbody-head:after,
.post-row:after,
.btn-group:after {
  clear: both;
}
.post-row .col-main {
  float: left;
  width: 512px;
  padding: 2px 6px;
}
.post-row .col-hd {
  padding: 2px 6px;
  float: left;
  width: 80px;
}
.post-row .col-info {
  padding: 2px 6px;
  float: left;
  width: 148px;
}
.post-line {
  height: 0;
  width: 950px;
  margin: 0 auto;
  border-top: 1px solid #428bca;
}
